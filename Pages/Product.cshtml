@page
@model e_commerce.Pages.ProductModel
@{
    ViewData["Title"] = "Product Management";
}

<!-- Improved header design -->
<div class="text-center">
    <h1 class="display-4">Products Number : @Model.Products.Count()</h1>
</div>

<!-- Product table -->
<table class="table table-bordered mt-4">
    <thead class="thead-dark">
        <tr>
            <!-- Column headers with more descriptive names -->
            <th scope="col">Product Name</th>
            <th scope="col">Brand Name</th>
            <th scope="col">Category</th>
            <th scope="col">Quantity</th>
        </tr>
    </thead>
    <tbody>
        <!-- Loop through products and display information -->
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>
                    @product.ProductName
                </td>
                <td>
                    @product.Brand.BrandName
                </td>
                <td>
                    @product.Category.CategoryName
                </td>
                <td>
                    @if (product.Stocks.FirstOrDefault()?.Quantity > 0)
                    {
                        @product.Stocks.FirstOrDefault()?.Quantity
                    }
                    else
                    {
                        <span>Non dispo</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
